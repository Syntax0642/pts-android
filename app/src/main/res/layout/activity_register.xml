<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@drawable/ng"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/signuptxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:src="@drawable/scrollsignup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="232dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/adv"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/emailsignup"
        android:textColorHint="@color/black"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/adv"
        android:inputType="text"
        android:hint="Username"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/emailsignup"
        app:layout_constraintStart_toStartOf="@+id/emailsignup"
        android:layout_marginTop="30dp"
        android:id="@+id/usernamesignup"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:fontFamily="@font/adv"
        android:inputType="textPassword"
        android:hint="Password"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/usernamesignup"
        app:layout_constraintStart_toStartOf="@id/emailsignup"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/black"
        android:id="@+id/passwordsignup"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/adv"
        android:text="Arleady have an account?"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/passwordsignup"
        app:layout_constraintTop_toBottomOf="@id/passwordsignup"/>

    <TextView
        android:layout_width="112dp"
        android:layout_height="20dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/adv"
        android:text="Sign In Here"
        android:textColor="#c30010"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/passwordsignup"
        app:layout_constraintTop_toBottomOf="@id/passwordsignup" />

    <ImageView
        android:id="@+id/button_signup"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:src="@drawable/woodenbutton"
        app:layout_constraintTop_toBottomOf="@id/passwordsignup"
        app:layout_constraintStart_toStartOf="@id/passwordsignup" />

</androidx.constraintlayout.widget.ConstraintLayout>